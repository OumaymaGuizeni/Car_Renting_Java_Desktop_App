<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.Admin_controllers.AdminDashboardController" stylesheets="@styles/admin_Dashboard_style.css">
