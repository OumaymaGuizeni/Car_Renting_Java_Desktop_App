<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" 
    style="-fx-background-color: transparent; 
           -fx-background-image: url('/src/Background.png'); 
           -fx-background-position: center center; 
           -fx-background-repeat: no-repeat; 
           -fx-background-size: cover;" 
    xmlns:fx="http://javafx.com/fxml/1" 
    xmlns="http://javafx.com/javafx/23.0.1" 
    fx:controller="controllers.User_controllers.HouseConfirmeReservation"  stylesheets="@styles/home.css" >
    
    <children>
        <!-- Logo Image -->
        <ImageView fx:id="logoImage" fitHeight="100.0" fitWidth="100.0" 
                   preserveRatio="true" 
                   AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
            <image>
                <Image url="@/src/logo.png" />
            </image>
        </ImageView>

        <!-- Secondary Image -->
        <ImageView fitHeight="135.0" fitWidth="135.0" 
                   preserveRatio="true" 
                   layoutX="435.0" layoutY="65.0">
            <image>
                <Image url="@/src/housepng.png" />
            </image>
        </ImageView>

        <!-- Start Date -->
        <Text layoutX="320.0" layoutY="290.0" text="Start Date:" />
        <DatePicker layoutX="430.0" layoutY="275.0" fx:id="startDatePicker" />

        <!-- End Date -->
        <Text layoutX="320.0" layoutY="330.0" text="End Date:" />
        <DatePicker layoutX="430.0" layoutY="315.0" fx:id="endDatePicker" />

        <!-- Payment Type (CheckBoxes) -->
        <Text layoutX="320.0" layoutY="370.0" text="Payment Type:" />
        <HBox spacing="20.0" layoutX="430.0" layoutY="355.0">
            <CheckBox fx:id="checkBoxCash" text="Cash" />
            <CheckBox fx:id="checkBoxCard" text="With Card" />
        </HBox>
        <!-- Price Box -->
        <Text layoutX="320.0" layoutY="420.0" text="Price:" />
        <TextField fx:id="priceField" layoutX="430.0" layoutY="405.0" 
                   prefWidth="200.0" editable="false" 
                   style="-fx-font-size: 14px; -fx-text-fill: #000;" />
        <!-- Confirm Button -->
        <Button layoutX="375.0" layoutY="470.0" prefWidth="250.0" 
                onAction="#confirmReservation" 
                style="-fx-font-size: 16px; 
                       -fx-background-color: #4CAF50; 
                       -fx-text-fill: white; 
                       -fx-padding: 10px 20px; 
                       -fx-background-radius: 5;" 
                text="Confirm" />

        <!-- Exit Button -->
        <Button layoutX="700.0" layoutY="500.0" prefWidth="250.0" 
                onAction="#Exit" 
                style="-fx-font-size: 16px; 
                       -fx-background-color: #f44336; 
                       -fx-text-fill: white; 
                       -fx-padding: 10px 20px; 
                       -fx-background-radius: 5;" 
                text="Exit" />

        <!-- Back Button -->
        <Button layoutX="20.0" layoutY="500.0" prefWidth="250.0" 
                onAction="#BACK" 
                style="-fx-font-size: 16px; 
                       -fx-background-color: #2196F3; 
                       -fx-text-fill: white; 
                       -fx-padding: 10px 20px; 
                       -fx-background-radius: 5;" 
                text="Back" />
    </children>
</AnchorPane>
