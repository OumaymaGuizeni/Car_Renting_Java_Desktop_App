            </HBox>
            <HBox spacing="15.0">
                <Label minWidth="90.0" style="-fx-font-weight: bold;" text="CIN:" />
                <TextField fx:id="txtCIN" prefWidth="200.0" promptText="Enter CIN" />
            </HBox>
            <HBox spacing="15.0">
                <Label minWidth="90.0" style="-fx-font-weight: bold;" text="Email:" />
                <TextField fx:id="txtEmail" prefWidth="200.0" promptText="Enter Email" />
            </HBox>
            <HBox spacing="15.0">
                <Label minWidth="90.0" style="-fx-font-weight: bold;" text="Address:" />
                <TextField fx:id="txtAddress" prefWidth="200.0" promptText="Enter Address" />
